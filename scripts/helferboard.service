[Unit]
Description=Helferboard FastAPI Application
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/opt/helferboard
Environment=PATH=/opt/helferboard/venv/bin
Environment=ADMIN_USER=admin
Environment=ADMIN_PASSWORD=admin
ExecStart=/opt/helferboard/venv/bin/uvicorn app.main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
